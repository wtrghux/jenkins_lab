pipeline {
    agent any
    options {
        timestamps()
    }
    stages {
        stage("Rename build"){
            steps{
                script{
                    currentBuild.displayName = "Попытка #${currentBuild.id}"
                }
                script {
                    currentBuild.description = "<a href=${currentBuild.absoluteUrl}>Build ${currentBuild.id}</a>"
                }
            }
        }
        stage("First step") {
            steps {
                sh 'python3 -m pip install -r requirements.txt'
            }
        }
        stage("Second step") {
            steps {
                sh 'python3 -m pytest -v'
                junit '*.xml'
            }
        }
    }
}
